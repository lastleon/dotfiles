// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Custom Icon Theme",
  "title_bar": {
    "show_sign_in": false
  },
  "ui_font_size": 16,
  "ui_font_family": "Ubuntu",
  "buffer_font_size": 16.0,
  "theme": "Github Dark",
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "scrollbar": {
    "show": "never"
  },
  "buffer_font_family": "UbuntuMono Nerd Font Mono",
  "buffer_font_weight": 500,
  "buffer_font_features": {
    // Disable ligatures:
    "calt": false
  },
  "gutter": {
    "folds": false,
    "runnables": false,
    "code_actions": true,
    "line_numbers": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "use_smartcase_search": true,
  "format_on_save": "off",
  "active_pane_modifiers": {
    "inactive_opacity": 0.93
  },
  // "experimental.theme_overrides": {
  //   "terminal.background": "#181818",
  //   "terminal.ansi.black": "#171421",
  //   "terminal.ansi.red": "#C01C28",
  //   "terminal.ansi.green": "#26A269",
  //   "terminal.ansi.yellow": "#A2734C",
  //   "terminal.ansi.blue": "#12488B",
  //   "terminal.ansi.magenta": "#A347BA",
  //   "terminal.ansi.cyan": "#2AA1B3",
  //   "terminal.ansi.white": "#D0CFCC",
  // },
  "terminal": {
    "font_family": "Ubuntu Mono",
    "font_weight": 800,
    "font_size": 14
  },
  "languages": {
    "Python": {
      "language_servers": ["!pylsp", "basedpyright", "ruff"],
      "formatter": "language_server"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        // get more cargo-less diagnostics from rust-analyzer,
        // which might include false-positives (those can be turned off by their names)
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        // Use `-p` instead of `--workspace` for cargo check
        "check": {
          "workspace": false
        }
      }
    },
    "ltex": {
      "settings": {
        "ltex": {
          "language": "de-DE"
        }
      }
    }
  }
}
